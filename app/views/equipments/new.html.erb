<h1>Ajouter un équipement</h1>

<%= form_with model: @equipment, url: equipments_path, local: true, html: { multipart: true } do |form| %>
  <div>
    <%= form.label :name, "Nom de l'équipement" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description, "Description" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :price, "Prix par jour (€)" %>
    <%= form.number_field :price %>
  </div>

  <div>
    <%= form.label :photos, "Ajouter des photos" %>
    <%= form.file_field :photos, multiple: true %>
  </div>

  <%= form.submit "Créer" %>
<% end %>

<%= link_to "Retour", equipments_path %>
