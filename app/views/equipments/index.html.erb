<h1>Équipements disponibles</h1>

<div class="container mt-4">
  <div class="row">
    <% @equipments.each do |equipment| %>
      <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
          <div class="card-body">
            <h5 class="card-title"><%= equipment.name %></h5>
            <% if equipment.photos.attached? %>
              <%= image_tag equipment.photos.first, width: 100, height: 100 %>
            <% else %>
              <p>Aucune image disponible</p>
            <% end %>
            <p class="card-text"><%= equipment.category %> - <strong><%= equipment.price %>€</strong></p>
            <a href="<%= equipment_path(equipment) %>" class="btn btn-primary">Voir plus</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
